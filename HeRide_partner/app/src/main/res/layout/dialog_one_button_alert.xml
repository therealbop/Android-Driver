<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_circle_corner">

    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/driver_details"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:padding="@dimen/dimen_18dp"
        android:text="@string/alert"
        android:textColor="@color/denim"
        android:textSize="@dimen/text_size_15sp" />

    <View
        android:id="@+id/tv_alert_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/divider_invoice3"
        android:layout_below="@id/tv_alert_title" />

    <TextView
        android:id="@+id/tv_alert_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_20dp"
        android:paddingEnd="@dimen/dimen_30dp"
        android:paddingLeft="@dimen/dimen_30dp"
        android:paddingRight="@dimen/dimen_30dp"
        android:paddingStart="@dimen/dimen_30dp"
        android:paddingTop="@dimen/dimen_20dp"
        android:text="@string/messagealert"
        android:textColor="@color/denim"
        android:textSize="@dimen/text_size_12sp"
        android:layout_below="@+id/tv_alert_divider2" />

    <View
        android:id="@+id/tv_alert_divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@id/tv_alert_body"
        android:background="@color/divider_invoice3"/>

    <TextView
        android:id="@+id/tv_alert_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_alert_divider1"
        android:background="@drawable/selector_white_layout"
        android:gravity="center"
        android:padding="@dimen/dimen_18dp"
        android:text="@string/ok"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/dust_gray"
        android:textSize="@dimen/text_size_15sp" />

</RelativeLayout>