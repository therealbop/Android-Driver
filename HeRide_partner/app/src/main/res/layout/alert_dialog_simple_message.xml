<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_dialog_white_backgroud">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/dialogHeaderBackground">

            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBlack"
                android:text="@string/message"
                android:gravity="center"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingTop="@dimen/dimen_14dp"
                android:paddingBottom="@dimen/dimen_19dp"
                android:layout_centerVertical="true" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightBlackText"
            android:background="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/dimen_20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textColor="@color/lightBlackText"
                android:background="@color/dialogActionBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/view"
                android:layout_width="0.05dp"
                android:layout_height="match_parent"
                android:background="@color/divider"/>

            <TextView
                android:id="@+id/tvUpdate"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/OK"
                android:textColor="@color/lightBlackText"
                android:background="@color/dialogActionBackground"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>