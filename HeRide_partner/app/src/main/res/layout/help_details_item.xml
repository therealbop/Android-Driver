<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/faqsItemViewLl"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:id="@+id/faqsItemRl">
        <TextView
            android:id="@+id/tv_help_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/waterloo"
            android:text="i have not receive the order on expected date"/>

        <ImageView
            android:id="@+id/forwardIconIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorBotticelli"
        android:layout_height="1dp"/>


</LinearLayout>